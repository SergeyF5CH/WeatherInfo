      "CityInfo.API.Controllers": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "OpenMeteo": {
    "BaseUrl": "https://api.open-meteo.com/v1/forecast",
